ul,li
  list-style:none
body,html
  height: 100%
  font-family: "lucida grande", "lucida sans unicode", lucida, helvetica, "Hiragino Sans GB", "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif;
  font-size: 16px
  margin: 0
  padding: 0
a
  text-decoration: none
  color: #3b3b3b
  &:hover
    color: #026ed2
  &:visited
    color:#b6b6b6 

.wrapper
  width: 90%
  max-width: 760px
  margin: 0 auto
//  列表页
.blog-list
  padding-top: 50px
  .post
    padding: 8px 0
    display: block
    border-bottom: 1px solid #f1f2f4
    clear both
    .time
      color:#bbb
      font-size: 12px
      font-weight: normal
    a
      display: flex
      justify-content: space-between
      align-items: baseline
      span
        line-height: inherit;
        font-weight: normal;
      .post-tag
        color: #bbb
        font-size: 12px
      
      
       
// 详情页

.post-detail
  display: block;
  padding: 65px 0 25px;
  clear: both;
  #post-title
    margin: 30px 0;
    font-size: 34px;
    line-height: 56px;
    color: #262b30;
  .post-info
    i
      margin: 0 5px
    span
      font-size: 12px
      color: #b6b6b6
  .post-content
      margin: 0 0 30px;

    
